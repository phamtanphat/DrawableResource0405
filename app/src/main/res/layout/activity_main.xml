<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textviewdrawableshape"
        android:text="Shape Drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@drawable/drawable_clip"
        android:layout_toRightOf="@id/textviewdrawableshape"
        android:id="@+id/imageviewclipdrawable"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <Button
        android:background="@drawable/drawable_statelist"
        android:id="@+id/buttondrawablestatelist"
        android:layout_toRightOf="@id/imageviewclipdrawable"
        android:text="Drawable State List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/imageviewLayerList"
        android:layout_width="300dp"
        android:layout_height="300dp" />
</RelativeLayout>